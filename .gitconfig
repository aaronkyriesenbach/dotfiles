[include]
	path = .gitidentity

[push]
	default = simple

[pull]
	rebase = true

[log]
	decorate = true
	abbrevCommit = true

[pager]
	branch = false

[merge]
	tool = nvimdiff

[init]
	defaultBranch = master
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
